# Example Environment Variables
# Copy this file to .env and update with your values
# Author: Gabriel Demetrios Lafis

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8080
GIN_MODE=release

# Redis Configuration
REDIS_ADDR=localhost:6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_POOL_SIZE=100

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Monitoring
PROMETHEUS_ENABLED=true
METRICS_PORT=9090

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_RPS=1000
RATE_LIMIT_BURST=2000

# Models
MODELS_DIR=./models
MODEL_RELOAD_INTERVAL=60s

# Cache
CACHE_TTL=300s
CACHE_KEY_PREFIX=ml_serving

# Security (optional)
TLS_ENABLED=false
TLS_CERT_FILE=
TLS_KEY_FILE=
AUTH_ENABLED=false

# MLflow (optional)
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_ENABLED=false
